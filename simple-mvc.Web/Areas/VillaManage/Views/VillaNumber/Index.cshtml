@model IEnumerable<simple_mvc.Domain.Entities.VillaNumber>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="py-2">Villa numbers</div>
        </div>
    </div>

    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                @* <a asp-area="Villa" asp-controller="Villa" asp-action="Create" class="btn btn-secondary">
                <i class="bi bi-plus-circle"></i>
                Add new
                </a> *@
                <a href="@Url.Action("Create","VillaNumber",new {Area="VillaManage"})" class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i>
                    Add new
                </a>
            </div>
        </div>
        <table class="table table-striped table-bordered table-light">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Villa.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VillaID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SpecialDetails)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Villa.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Villa_Number)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SpecialDetails)
                        </td>
                        <td>
                            @Html.ActionLink("Update", "Update", "VillaNumber", new { id=item.Villa_Number, Area="VillaManage"}, new {@class="btn btn-primary"}) |
                            @Html.ActionLink("Details", "Details", "VillaNumber", new { id=item.Villa_Number, Area="VillaManage"},  new { @class="btn btn-secondary" }) |
                            @Html.ActionLink("Delete", "Delete", "VillaNumber", new {  id=item.Villa_Number, Area="VillaManage"},  new { @class="btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>


